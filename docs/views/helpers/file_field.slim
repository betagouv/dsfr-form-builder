section.fr-my-4w id="hint"
  h2 Avec texte d'aide
  ruby:
    rb_code = <<~RUBY
      f.dsfr_file_field :document, hint: "Formats acceptés : PDF, PNG, JPG. Taille max : 5 Mo"
    RUBY
  == example(rb_code, "hint")

section.fr-my-4w id="obligatoire"
  h2 Champ obligatoire
  ruby:
    rb_code = <<~RUBY
