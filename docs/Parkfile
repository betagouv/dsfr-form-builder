# frozen_string_literal: true

require_relative "app"

Parklife.application.config.app = DocsApp
Parklife.application.config.build_dir = "build"
Parklife.application.config.base = "/"

Parklife.application.routes do
  root
  get "/tous-les-helpers"

  DocsApp::HELPERS.each do |helper|
    get "/#{helper.tr('_', '-')}"
  end
end
